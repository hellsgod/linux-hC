+  -plugin-opt=tail-merge-threshold=16 \
+  -plugin-opt=slp-threshold=8 \
+  -plugin-opt=slp-schedule-budget=32 \
+  -plugin-opt=extra-vectorizer-passes \
+  -plugin-opt=enable-vplan-native-path \
